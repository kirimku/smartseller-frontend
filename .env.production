# Single Build Multi-Domain Configuration
# This environment configuration supports both smartseller.com and app.rexus.com

# Application Mode (auto-detect at runtime)
VITE_APP_MODE=auto

# Domain Configuration
VITE_PLATFORM_DOMAIN=smartseller.com
VITE_REXUS_DOMAIN=app.rexus.com
VITE_DEFAULT_TENANT=rexus-gaming

# API Configuration
VITE_API_BASE_URL=https://api.smartseller.com
VITE_API_PLATFORM_URL=https://api.smartseller.com/platform
VITE_API_TENANT_URL=https://api.smartseller.com/tenant
VITE_API_REXUS_URL=https://api.rexus.com/v1

# Analytics Configuration
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_FACEBOOK_PIXEL_ID=123456789
VITE_HOTJAR_ID=1234567

# Feature Flags (Global)
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG=false
VITE_ENABLE_SERVICE_WORKER=true

# Payment Gateway Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxx
VITE_PAYPAL_CLIENT_ID=xxxxxxxxxx

# Social Media Configuration
VITE_FACEBOOK_APP_ID=123456789
VITE_TWITTER_HANDLE=@smartseller

# CDN and Assets
VITE_CDN_BASE_URL=https://cdn.smartseller.com
VITE_STATIC_ASSETS_URL=https://assets.smartseller.com

# Security Configuration
VITE_RECAPTCHA_SITE_KEY=6Lxxxxxxxxxx
VITE_CSP_NONCE_ENABLED=true

# Multi-Language Support
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,id,ms

# Currency Configuration
VITE_DEFAULT_CURRENCY=USD
VITE_REXUS_CURRENCY=IDR
VITE_SUPPORTED_CURRENCIES=USD,IDR,SGD,MYR

# Application Settings
VITE_APP_NAME=SmartSeller
VITE_APP_VERSION=1.0.0
VITE_BUILD_TIMESTAMP=auto

# Development Overrides
VITE_DEV_PLATFORM_PORT=3000
VITE_DEV_API_PORT=3001
VITE_DEV_MOCK_API=false