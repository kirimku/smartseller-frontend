{
  "apps": [{
    "name": "smartseller-frontend",
    "script": "server.js",
    "instances": 1,
    "exec_mode": "cluster",
    "env": {
      "NODE_ENV": "development",
      "PORT": 4173
    },
    "log_file": "./logs/combined.log",
    "out_file": "./logs/out.log",
    "error_file": "./logs/error.log",
    "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
    "merge_logs": true,
    "max_memory_restart": "1G",
    "restart_delay": 4000,
    "max_restarts": 10,
    "min_uptime": "10s"
  }]
}