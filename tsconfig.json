{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@platform/*": ["./src/platform/*"],
      "@tenant/*": ["./src/tenant/*"],
      "@shared/*": ["./src/shared/*"],
      "@storefront/*": ["./src/storefront/*"],
      "@contexts/*": ["./src/contexts/*"]
    },
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false
  }
}
